{
  "name": "@tapcn/monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:docs": "turbo dev --filter=docs",
    "dev:showcase": "turbo dev --filter=showcase --concurrency 32",
    "dev:showcase:web": "turbo dev:web --filter=showcase --concurrency 32",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build:docs": "turbo build --filter=docs",
    "build:cli": "turbo build --filter=@tapcn/cli",
    "clean": "turbo clean && rm -rf .turbo node_modules"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "^2.8.3",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "packageManager": "pnpm@9.15.0"
}
